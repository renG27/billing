<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_billing_plan_form" model="ir.ui.view">
        <field name="name">billing.plan.form</field>
        <field name="model">billing.plan</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1><field name="name" placeholder="Contoh: Paket Gold Tiered"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="billing_mode" widget="radio"/>
                            <field name="currency_id" invisible="1"/>
                            
                            <field name="flat_price" invisible="billing_mode != 'flat'"/>
                        </group>
                        <group>
                            <field name="active"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Level Harga (Tiers)" invisible="billing_mode != 'per_visit'">
                            <field name="tier_ids">
                                <tree editable="bottom">
                                    <field name="min_count"/>
                                    <field name="max_count"/>
                                    <field name="price_unit"/>
                                </tree>
                            </field>
                            <p class="text-muted">
                                *Contoh: Level 1 (0-700) Rp 5000. Level 2 (701-1500) Rp 3000. Level 3 (1501-0) Rp 2000.
                            </p>
                        </page>
                        <page string="Rules (Syarat Valid)">
                            <field name="rule_ids" widget="many2many_checkboxes"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_billing_plan" model="ir.actions.act_window">
        <field name="name">Paket Langganan</field>
        <field name="res_model">billing.plan</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>